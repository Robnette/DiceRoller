<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_margin="10dip"
            android:background="@drawable/window">

            <TextView
                android:id="@+id/rollResultType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="..."
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/rollResultTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="..."
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:paddingTop="3dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/dice_last_roll"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:paddingBottom="3dp"
                android:paddingRight="10dp"
                android:id="@+id/textLastRoll"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/rollResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/dice_result_default"
                android:textColor="@android:color/background_light"
                android:paddingLeft="10dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/resultDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/rollResultTime"
                android:layout_alignRight="@+id/rollResultTime"
                android:layout_centerVertical="true"
                android:text=""
                android:paddingRight="10dp"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

        </RelativeLayout>
</android.support.constraint.ConstraintLayout>